    <!-- JavaScript for interactivity -->
    <script>
        // JavaScript để xử lý các chức năng tương tác trên trang
        document.addEventListener('DOMContentLoaded', () => {
            // Xử lý cuộn mượt khi click vào các link trên menu
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });

            // Xử lý chuyển đổi giữa các tab trong phần tài liệu học tập
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabPanes = document.querySelectorAll('.tab-pane');
            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    // Loại bỏ trạng thái 'active' của tất cả các nút và ẩn tất cả các tab
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    tabPanes.forEach(pane => pane.classList.add('hidden'));

                    // Thêm trạng thái 'active' cho nút được click và hiển thị tab tương ứng
                    button.classList.add('active');
                    const targetTab = document.getElementById(button.dataset.tab);
                    if (targetTab) {
                        targetTab.classList.remove('hidden');
                    }
                });
            });

            // Xử lý hiển thị và ẩn modal thông báo khẩn
            const emergencyModal = document.getElementById('emergency-modal');
            const showModalBtn = document.getElementById('show-emergency-modal');
            const closeModalBtn = document.getElementById('close-emergency-modal');

            if (showModalBtn) {
                showModalBtn.addEventListener('click', () => {
                    emergencyModal.classList.remove('hidden');
                });
            }

            if (closeModalBtn) {
                closeModalBtn.addEventListener('click', () => {
                    emergencyModal.classList.add('hidden');
                });
            }
            
            // Đóng modal khi click ra ngoài
            if (emergencyModal) {
                emergencyModal.addEventListener('click', (e) => {
                    if (e.target === emergencyModal) {
                        emergencyModal.classList.add('hidden');
                    }
                });
            }
        });
    </script>

